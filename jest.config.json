{
    "verbose": true,
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleDirectories": ["node_modules", "test"],
    "testMatch": ["**/*.test.ts"],
    "collectCoverageFrom": ["./src/functions/**/*.ts", "./src/classes/**/*.ts"],
    "transform": {
        "`^.+\\.tsx?$`": [
            "ts-jest",
            {
                "isolatedModules": true
            }
        ]
    }
}
